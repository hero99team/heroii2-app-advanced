{
    "name": "hero99team/heroii2-app-advanced",
    "version": "0.0.1",
    "description": "Hero99 Yii 2 Advanced Project Template",
    "keywords": ["hero99", "hero99team", "yii2", "framework", "advanced", "project template"],
    "homepage": "http://www.hero99.com.br/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/hero99team/heroii2-app-advanced/issues?state=open",
        "source": "https://github.com/hero99team/heroii2-app-advanced"
    },
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "~2.0.6",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",

        "codeception/base": "^2.2.3",
        "codeception/verify": "~0.3.1"
    },
    "config": {
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    },
    "scripts": {
        "post-install-cmd": "php init --env=Development --overwrite=n"
    }
}
